<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.czcps.oa.dao.EmployeeDao">
    <select id="selectById" parameterType="Long" resultType="cn.czcps.oa.entity.Employee">
        select * from adm_employee
        where employee_id=#{value}
    </select>
    <select id="selectLeader" parameterType="cn.czcps.oa.entity.Employee" resultType="cn.czcps.oa.entity.Employee">
        select * from adm_employee where
        <if test="emp.level&lt;7">
             department_id=#{emp.departmentId} and level=7
        </if>
        <if test="emp.level==7">
             level=8
        </if>
        <if test="emp.level==8">
           employee_id= #{emp.employeeId}
        </if>

    </select>

</mapper>